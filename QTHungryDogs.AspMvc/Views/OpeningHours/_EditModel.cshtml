@*@CustomCode*@
@model QTHungryDogs.AspMvc.Models.Base.OpeningHour

<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <input asp-for="RestaurantId" type="hidden" />
        <div class="form-group">
            <label asp-for="Restaurant" class="control-label"></label>
            <input asp-for="Restaurant!.DisplayName" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Weekday" class="control-label"></label>
            @{
                var valuesWeekday = Enum.GetValues(typeof(QTHungryDogs.Logic.Modules.Common.Weekday)).Cast<QTHungryDogs.Logic.Modules.Common.Weekday>().Select(e => new SelectListItem(e.ToString(), e.ToString()));
            }
            @Html.DropDownListFor(m => m.Weekday, valuesWeekday, null, new { @class = "form-select" })
            <span asp-validation-for="Weekday" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OpenFrom" class="control-label"></label>
            <input asp-for="OpenFrom" class="form-control" />
            <span asp-validation-for="OpenFrom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OpenTo" class="control-label"></label>
            <input asp-for="OpenTo" class="form-control" />
            <span asp-validation-for="OpenTo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Notes" class="control-label"></label>
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsActive" class="control-label"></label>
            <input asp-for="IsActive" class="form-check" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
    </div>
</div>
