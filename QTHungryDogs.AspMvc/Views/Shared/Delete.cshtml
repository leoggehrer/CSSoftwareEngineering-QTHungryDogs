@*@CodeCopy*@
@model QTHungryDogs.AspMvc.Models.IdentityModel

@{
    ViewData["Title"] = "Delete";
}

<img class="card-img-top" src="/img/banner.jpg" style="margin-top: -20px; margin-bottom: -85px" alt="Banner">
<h1>Delete</h1>
<h4>@Model!.GetType().Name</h4>
<hr />
<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    @if (string.IsNullOrEmpty(ViewBag.Error) == false)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }
    @await Html.PartialAsync("_DisplayModel", Model)

    <form asp-action="Delete">
        @await Html.PartialAsync("_SubmitBack", new QTHungryDogs.AspMvc.Models.View.SubmitBackCmd() { SubmitAction="Delete", SubmitText="Delete", SubmitCss="btn btn-danger", FromSubmitToBack=true })
    </form>
</div>
