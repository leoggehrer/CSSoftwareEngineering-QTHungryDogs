@*@CustomCode*@
@{
    @using QTHungryDogs.AspMvc.Modules.Session

    var sessionWrapper = new SessionWrapper(Context.Session);

    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@("Home")</a>
        </li>
@*#if ACCOUNT_ON*@
        @if (sessionWrapper.LoginSession != null)
        {
            if (sessionWrapper.LoginSession.Roles.Any(e => e.Designation == "SysAdmin")
                || sessionWrapper.LoginSession.Roles.Any(e => e.Designation == "AppAdmin"))
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Restaurants" asp-action="Index">@("Restaurants-Data")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="RestaurantInfos" asp-action="Index">@("Restaurants-Info")</a>
                </li>
            }
        }
@*#endif*@
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">@("Contact")</a>
        </li>
    </ul>
}
